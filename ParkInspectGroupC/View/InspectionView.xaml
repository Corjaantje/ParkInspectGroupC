<Window x:Class="ParkInspectGroupC.View.InspectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InspectionView" Height="400" Width="500">
	<Grid>
		<DataGrid HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Height="240" Width="472" IsReadOnly="True" ItemsSource="{Binding Inspections}">

			<DataGrid.Columns>

				<DataGridTextColumn Header="#" Binding="{Binding Id}"/>
				<DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>

			</DataGrid.Columns>

		</DataGrid>
		<TextBox x:Name="searchCriteria" HorizontalAlignment="Left" Height="23" Margin="10,63,0,0" TextWrapping="Wrap" Text="{Binding SearchCriteria, Mode=TwoWay}" VerticalAlignment="Top" Width="392"/>
		<Button x:Name="searchButton" Content="Button" HorizontalAlignment="Left" Margin="407,63,0,0" VerticalAlignment="Top" Width="75" Height="23"/>

	</Grid>
</Window>
