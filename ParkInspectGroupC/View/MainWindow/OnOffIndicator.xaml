<UserControl x:Class="ParkInspectGroupC.View.MainWindow.OnOffIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkInspectGroupC.View.MainWindow"
             mc:Ignorable="d"
             DataContext="{Binding OnOffIndicator, Source={StaticResource Locator}}"
             >
    <Grid>
        <Ellipse Width="10" Height="10" Fill="{Binding IndicatorColor}" Margin="1,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <Label Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Content="{Binding OnOffIndicator}" />
    </Grid>
</UserControl>
