<UserControl x:Class="ParkInspectGroupC.View.MainWindow.ThemeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkInspectGroupC.View.MainWindow"
			 xmlns:themes="clr-namespace:Simple.Wpf.Themes;assembly=Simple.Wpf.Themes"
             mc:Ignorable="d"		
			 DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
		<WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Left" VerticalAlignment="Center" >
			<Label Content="Quick options:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,5,5" />
			<themes:Themes x:Name="ThemesControl" Margin="0,1,1,1" ItemsSource="{Binding Path=ThemeList}" SelectedItem="{Binding SelectedTheme}" Visibility="Hidden" Width="0" />
			<ComboBox ItemsSource="{Binding Path=ThemeList, Mode=OneWay}" SelectedItem="{Binding Path=SelectedTheme, Mode= TwoWay}" DisplayMemberPath="Name" Margin="0,5,5,5" />
		</WrapPanel>
	</Grid>
</UserControl>
